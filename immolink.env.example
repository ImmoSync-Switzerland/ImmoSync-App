MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net
MONGODB_DB_NAME=your_database_name
API_URL=http://your-api-url

# App URLs
APP_URL=http://localhost:3000
FLUTTER_APP_SCHEME=immolink

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in Stripe Dashboard for production)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_replace_me
STRIPE_BASIC_YEARLY_PRICE_ID=price_basic_yearly_replace_me
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_replace_me
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_replace_me
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_replace_me
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_replace_me

# Database Configuration (for SQL setup)
DB_HOST=localhost
DB_PORT=3306
DB_USER=immolink_app
DB_PASSWORD=secure_password_here
DB_NAME=immolink_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100