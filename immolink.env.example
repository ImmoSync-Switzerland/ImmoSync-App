MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net
MONGODB_DB_NAME=your_database_name
API_URL=http://your-api-url

# App URLs
APP_URL=http://localhost:3000
FLUTTER_APP_SCHEME=immolink

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Dynamic Plan Price IDs (required for /subscriptions/plans endpoint)
# Provide the Stripe Price IDs for each plan & interval you support.
# At minimum a MONTHLY price is required per plan; YEARLY is optional (will derive discounted yearly price if omitted).
# Naming pattern auto-discovered by backend: STRIPE_<PLAN>_MONTHLY_PRICE_ID and STRIPE_<PLAN>_YEARLY_PRICE_ID
# Example plans below â€“ replace with real price IDs from your Stripe dashboard.
STRIPE_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_id_here
STRIPE_BASIC_YEARLY_PRICE_ID=price_basic_yearly_id_here
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id_here
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id_here
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id_here
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id_here

# To add another plan (e.g., STARTER): define STRIPE_STARTER_MONTHLY_PRICE_ID (and optional STRIPE_STARTER_YEARLY_PRICE_ID)
# The slug exposed to clients will be the lowercase segment (basic, pro, enterprise, starter, etc.)

# Product metadata recommendations:
# - metadata.features: JSON array or semicolon-separated list for feature bullets
# - metadata.isPopular: "true" for highlighting a plan
# - metadata.yearlyDiscountPercent: number used to derive yearly price if YEARLY price ID omitted

# Database Configuration (for SQL setup)
DB_HOST=localhost
DB_PORT=3306
DB_USER=immolink_app
DB_PASSWORD=secure_password_here
DB_NAME=immolink_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Chat attachments (encrypted) size limit in MB for backend (multer)
# Keep this aligned with Nginx client_max_body_size to avoid 413 errors.
CHAT_MAX_ATTACHMENT_MB=20

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Admin (for server-side push delivery)
# If omitted, backend falls back to mock sending (no real push delivered).
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your_firebase_project_id.iam.gserviceaccount.com
# Wrap private key in double quotes in real .env if it contains newlines; use \n for line breaks.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\nABCDEF...\\n-----END PRIVATE KEY-----\n"

# Social Login (Google / Apple)
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
APPLE_CLIENT_ID=com.your.bundle.id
APPLE_SERVICE_ID=your.services.identifier

# Data backend selection for chat storage (mongo|dynamo)
DATA_BACKEND=mongo

# AWS/DynamoDB configuration (used when DATA_BACKEND=dynamo)
AWS_REGION=eu-central-1
DDB_MESSAGES_TABLE=ImmoLinkMessages
DDB_CONVERSATIONS_TABLE=ImmoLinkConversations
# Optional: GSI name for idempotency lookup by Matrix event id
DDB_MESSAGES_EVENT_GSI=matrixEventId-index