MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net
MONGODB_DB_NAME=your_database_name
API_URL=http://your-api-url

# App URLs
APP_URL=http://localhost:3000
FLUTTER_APP_SCHEME=immolink

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Note: Plans and prices are now fetched dynamically from Stripe Dashboard
# Create your subscription products in Stripe Dashboard with:
# 1. Product names: "Basic", "Pro", "Enterprise" 
# 2. Or set metadata.planId = "basic", "pro", "enterprise"
# 3. Add monthly and yearly recurring prices for each product
# 4. Set product descriptions or metadata.features with comma-separated feature list

# Database Configuration (for SQL setup)
DB_HOST=localhost
DB_PORT=3306
DB_USER=immolink_app
DB_PASSWORD=secure_password_here
DB_NAME=immolink_db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100