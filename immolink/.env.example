# ImmoLink Environment Variables
# Copy this file to .env and fill in your actual values

# Backend API URL
API_URL=https://backend.immosync.ch/api
API_BASE=https://backend.immosync.ch

# MongoDB Connection (for mobile/desktop direct access)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net
MONGODB_DB_NAME=immolink_db

# Stripe Payment Integration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# WebSocket URL (optional, auto-derived from API_URL if not set)
WS_URL=wss://backend.immosync.ch

# Development Settings
PRIMARY_HOST=http://127.0.0.1:3000

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
